<%- include('../snippets/header.ejs') %>
<%- include('../snippets/nav.ejs') %>
<div class="blogs content">
    <h2>All blogs</h2>
    <% if(blogs.length > 0) { %>
       <% blogs.forEach(function(blog) { %>
        <h3><%= blog.title %></h3>
        <p><%= blog.snippet %></p>
        <a href="/blog/<%=blog._id %>"> View Blog</a>

    <% }) } else { %>
        No Blogs created
     <% } %>   
    <%- include('../snippets/footer.ejs') %>
</div>
